---
export interface Props {
  src: string;
  alt: string;
}

const { src, alt } = Astro.props;
---

<blockquote>
    <div class="row">
        <div class="col-xs-3">
            <img {src} {alt} />
        </div>
        <div class="col-xs-9">
            <slot />
        </div>
    </div>
</blockquote>